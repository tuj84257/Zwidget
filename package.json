{
	"name": "zwidget",
	"version": "1.0.0",
	"description": "Add widgets easily to your desktop",
	"main": "./src/main/main.js",
	"scripts": {
		"tailwind-compile-mainwindow": "npx tailwindcss -i ./src/renderer/css/input/mainWindow.css -o ./src/renderer/css/output/mainWindow.css",
		"tailwind-compile-batterylevel": "npx tailwindcss -i ./src/renderer/css/input/batteryLevel.css -o ./src/renderer/css/output/batteryLevel.css",
		"electron": "electron . --wm-window-animations-disabled",
		"start": "npm run tailwind-compile-mainwindow && npm run tailwind-compile-batterylevel && npm run electron"
	},
	"repository": "https://github.com/tuj84257/Zwidget",
	"author": "Ardit Duhanxhiu",
	"devDependencies": {
		"daisyui": "^1.16.6",
		"electron": "^16.0.2",
		"tailwindcss": "^3.0.6"
	},
	"dependencies": {
		"ref-napi": "^3.0.3",
		"ref-struct-di": "^1.1.1",
		"tailwind-scrollbar-hide": "^1.1.7",
		"win-setwindowpos": "^2.1.0"
	}
}
